{
  "version": 2,
  "builds": [
    { "src": "src/app.ts", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "src/app.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
    },
    { "src": "/", "dest": "public/index.html" },
    { "src": "/(.+)", "dest": "public/$1" }
  ]
}
